@import "../../css/vars"
/*!
* Navigation
*/
.circle-navigation
    list-style none
    margin: 48px 0 0 0
    padding: 0
    text-align center
    height: 22px
    line-height: 22px
    margin-bottom: 20px;

    li
        vertical-align middle
        display inline-block
        margin: 0 6px
        width: 14px
        height: 14px
        border-radius 50%
        background-color #47576f
        cursor: pointer
        transition .2s

        &.active
            width: 22px
            height: 22px
            background-color #2298f0

        &:hover
        &:focus
            background-color #2298f0