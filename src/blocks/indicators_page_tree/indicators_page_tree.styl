/*!
* Tree
*/
.indicators-tree
    position: absolute
    width: 672px
    height: 100%
    top: 0
    left: 100px
    padding: 80px 12px 0
    background-color: #4b5461
    border-right 2px solid #4b5461

    &.open
        border-color #2da1f8

.tree-slider
    position: absolute
    right: -11px
    top: 50%
    margin-top: -2px
    height: 74px
    width: 22px
    background-color: #2ca0f7
    border-radius 12px
    cursor: pointer

    &:before
        font-family: 'fso-icomoon' !important;
        display: inline-block;
        speak: none;
        font-style: normal;
        font-weight: normal;
        font-variant: normal;
        text-transform: none;
        line-height: 1;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
        content: "\e90a";
        position: absolute
        left: 4px
        top: 24px
        font-size: 20px
        color #eff3f6

    .open &:before
        content: "\e909"
        left: 2px

.tree__search
    position: relative
    height: 41px
    border: 1px solid #d9d9d9
    border-radius 2px
    margin-bottom: 13px

.tree__input-search
    width: 100%
    height: 41px
    line-height: 41px
    padding-left: 10px
    padding-right: 38px
    border: 0
    outline: none
    background-color: transparent
    font-family $neoR
    font-size: 14px
    color: #fff

.input-search__icon
    position: absolute
    right: 8px
    top: 10px
    font-size: 22px
    color: #d9d9d9

.tree__filters
    white-space nowrap
    margin-bottom: 16px

.tree__filter
    display: inline-block
    white-space normal
    width: 33.33%
    margin-right: -4px
    padding-right: 14px

    &:last-child
        padding-right: 0

    .select2-container--default .select2-selection--single
        border-radius 2px
        background-color #5d6571
        border-color: #d9d9d9
        outline: none

    .select2-container--default .select2-selection--single .select2-selection__rendered
        color: #c6c6c6
        outline: none

    .select2-container--default .select2-selection--single .select2-selection__arrow b
        border 0
        width: 8px
        height: 5px
        color: #c6c6c6
        font-size: 10px;
        line-height: 1
        margin-left: -5px;
        margin-top: -5px;

        &:before
            display inline-block
            content: "\e90b";
            font-family: 'fso-icomoon' !important;
            display: inline-block;
            speak: none;
            font-style: normal;
            font-weight: normal;
            font-variant: normal;
            text-transform: none;
            line-height: 1;
            -webkit-font-smoothing: antialiased;
            -moz-osx-font-smoothing: grayscale;

    .select2-container--default.select2-container--open .select2-selection--single .select2-selection__arrow b
        &:before
            transform rotate(180deg)



.tree-controls
    border-bottom 1px solid #224260
    overflow hidden
    margin 0 -12px 15px
    padding: 0 12px 8px

.add-section
    border none
    outline none
    background-color transparent
    cursor: pointer
    vertical-align middle
    font-family $neoR
    font-size 14px
    color white

    .icon-add1
        font-size 16px
        margin-right: 6px