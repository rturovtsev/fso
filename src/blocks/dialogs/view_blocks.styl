/*!
* Dialog views
*/
.dialog__view
    position: relative
    display inline-block
    vertical-align top
    width: 160px
    height: 110px
    border-radius: 4px;
    background-color: rgb(240, 243, 248);
    margin-right: 12px
    margin-top: 14px
    margin-bottom: 16px
    cursor: pointer
    transition .2s

    span
        display inline-block
        position: absolute
        border-radius: 2px;
        background-color: rgb(184, 193, 208);
        transition .2s

    &.active
        background-color #249af1

