/*!
* Indicators tabs
*/
.indicators-tabs
    text-align: justify;
    margin: 0 -22px
    padding: 0 22px
    height: 30px
    border-bottom 1px solid #2198f0

    &:after
        display inline-block
        content ''
        width: 100%;
        height: 0;
        visibility: hidden;

    .indicators-tab
        position: relative
        display: inline-block;
        text-align: left;
        white-space nowrap
        border-bottom 3px solid transparent
        height: 29px
        cursor: pointer
        transition .2s

        &:after
            position: absolute
            left: 0
            bottom: -3px
            right: 0
            display inline-block
            content ''
            height: 0
            background-color #2198f0
            transition .2s

        &.active
            border-color #2198f0

        &:hover
            color #2198f0

            &:after
                height: 3px