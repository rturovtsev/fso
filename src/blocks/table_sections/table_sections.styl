@import "../../css/vars"
/*!
* Table sections
*/
.table-sections
    border-radius: 4px;
    background-color: rgb(222, 224, 228);
    padding: 14px
    font-family $proxyR
    font-size 18px
    color #383d44
    margin-bottom: 20px

.table-sections__cont
    margin-top: 10px

    .section
        cursor: pointer
        display inline-block
        background-color: rgb(137, 153, 177);
        padding: 6px 12px
        color white
        margin-right: 12px
        margin-bottom: 6px

        &:last-child
            margin-right: 0

.table-wrapper
    margin-bottom: 30px

    .col50p
        vertical-align bottom

        &:first-child
            padding-right: 4px

        &:last-child
            padding-left: 4px

    .cols
    .cold
        border-radius: 4px;
        background-color: rgb(222, 224, 228);
        padding: 14px 18px
        font-family $proxyR
        font-size 18px
        color #383d44

    .cols
        .cols_wrapper
            min-height 60px
            background-color white
            border 2px dashed #8999b1
            margin-top: 12px
            padding: 4px

            .section
                cursor: pointer
                display inline-block
                background-color: rgb(137, 153, 177);
                padding: 6px 12px
                color white
                margin-right: 12px
                margin-bottom: 6px

                &:last-child
                    margin-right: 0

                &:hover
                &:focus
                &:active
                    background-color: #9aadca;

    .cold
        .cold_wrapper
            min-height 185px
            background-color white
            border 2px dashed #8999b1
            margin-top: 12px
            padding: 4px

            .section
                cursor: pointer
                display inline-block
                background-color: rgb(137, 153, 177);
                padding: 6px 12px
                color white
                margin-right: 12px
                margin-bottom: 6px

                &:last-child
                    margin-right: 0

                &:hover
                &:focus
                &:active
                    background-color: #9aadca;

.table-wrapper.table
    display table
    width: 100%

    .tcell
        display table-cell
        vertical-align bottom

        &:first-child
            padding-right: 4px
            width: 70%

        &:last-child
            padding-left: 4px
            width: 30%

.table-data
    font-family $proxyR
    font-size 14px
    color #262626

    td
        background-color #eff3f6 !important
        border 1px solid #b9c5d4
        text-align center
        vertical-align top
        padding: 4px 4px

        @media (min-width: 1200px)
            padding: 12px 14px

    .text-left
        text-align left
        padding-right: 42px !important

        .table-data__filter
            margin-right: -32px
            margin-top: -4px;

    .td1
        background-color #8999b1 !important
        color white
        vertical-align middle
        padding: 4px 4px

        @media (min-width: 1200px)
            padding: 8px 14px

    .td2
        background-color #adb6c2 !important
        padding: 4px 4px

        @media (min-width: 1200px)
            padding: 8px 14px

    .td3
        background-color #d7dce2 !important

.table-data__filter
    position: relative
    display inline-block
    float right
    width: 26px
    height: 29px
    margin-right: 12px
    border-left 1px solid #9caabf
    cursor: pointer

    span
        position: absolute
        right: 0
        height: 3px
        background-color #3d495a

    &:hover
        span
            background-color #657284;

    .sp1
        top: 7px
        width: 7px

    .sp2
        top: 12px
        width:11px

    .sp3
        top: 17px
        width:16px

    .edit-widget-dialog &
        margin-right: -3px
        padding-top: 3px
        padding-bottom: 3px
        margin-left: 6px