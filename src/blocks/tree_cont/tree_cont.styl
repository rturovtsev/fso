/*!
* Tree
*/
.tree-cont
    margin-right: -14px
    opacity 0
    transition .3s

    .mCustomScrollBox
        padding-right: 14px

    .mCSB_inside>.mCSB_container
        margin-right: 0

    .mCSB_scrollTools
        right: -1px

.tree_open .tree-cont
    opacity 1

.tree__close-icon
    position: absolute
    top: 94px
    right: 3px
    width: 17px
    height: 16px
    transition .5s
    opacity 1

    &:before
        position: absolute
        left: 0
        top: 0
        width: 8px
        height: 8px
        display inline-block
        content ''
        border 2px solid #b7c0cd
        border-radius 1px

    &:after
        position: absolute
        right: 0
        bottom: 0
        width: 8px
        height: 8px
        display inline-block
        content ''
        border 2px solid #b7c0cd
        border-radius 1px


    .tree_open &
        opacity 0

.tree-controls
    border-bottom 1px solid #224260
    overflow hidden
    margin 0 -12px 15px -12px
    padding: 0 26px 5px 12px
    text-align right

.add-section
    text-align left
    border none
    outline none
    background-color transparent
    cursor: pointer
    vertical-align middle
    font-family $neoR
    font-size 12px
    color white

    @media (min-width: 1200px)
        font-size 14px

    &:hover
        color #279cf4

    .icon-add1
        font-size 27px
        margin-right: 6px
        vertical-align middle

.viewed-tree
    display inline-block
    white-space nowrap
    margin-top: 6px

    @media (min-width: 1200px)
        margin-top: 4px

.viewed-tree__txt
    display inline-block
    vertical-align middle
    font-family: $neoR
    font-size 12px
    color white
    cursor: pointer

    @media (min-width: 1200px)
        font-size 14px

    &:last-child
        margin-left: 8px

.viewed-tree__rail
    display inline-block
    vertical-align middle
    position: relative
    height: 8px
    width: 40px
    box-shadow: inset 0 1px 7px 0 rgba(0, 0, 0, 0.2);
    margin-left: 8px
    border-radius 4px
    background-color: rgb(48, 51, 55);

.viewed-tree__dragger
    position: absolute
    display inline-block
    width: 12px
    height: 12px
    border-radius: 50%;
    background-color: rgb(255, 255, 255);
    box-shadow: 0 2px 3px 0 rgba(34, 34, 34, 0.2);
    top: -2px
    left: 50%
    margin-left: -6px
    transition .3s

.viewed-tree__rail.open
    .viewed-tree__dragger
        left: 6px

.viewed-tree__rail.close
    .viewed-tree__dragger
        left 34px

.tree-scrolled-cont
    max-height calc(100vh - 250px)
    overflow hidden

.no-results
    color: white

.tree-list
    ul
        margin: 0
        padding: 0 0 0 34px
    & > ul
        padding: 0
    li
        margin-bottom: 5px

        &:last-child
            margin-bottom: 0

.tree-list > ul > li
    margin-bottom: 10px

    &:last-child
        margin-bottom: 0


    & > .tree-list__item
        padding: 18px 12px 16px 30px

    &.has-child > .tree-list__item
        background-color #279cf4

        &:hover
            background-color #1e8bdc

.tree-list__item
    position: relative
    padding: 14px 10px 14px 26px
    background-color #636a75
    color white
    font-size 14px
    font-family $myriad
    line-height: 1
    cursor: pointer
    border-left 3px solid transparent

    &:hover
        background-color #858b94

.tree-list .active
    & > .tree-list__item
        background-color #858b94
        cursor default
        border-left-color #3aa2f0

.has-child > .tree-list__item
    &:before
        color #2f96e3
        display inline-block
        content '\e90b'
        position: absolute
        top: 50%;
        margin-top: -6px;
        left: 4px
        font-size 12px
        font-family: 'fso-icomoon' !important;
        speak: none;
        font-style: normal;
        font-weight: normal;
        font-variant: normal;
        text-transform: none;
        line-height: 1;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
        transition .3s

.tree-list > ul > .has-child > .tree-list__item:before
    color: white

.has-child.open > .tree-list__item
    &:before
        transform rotate(180deg)

.has-child.open
    & > .tree-list__item + ul
        margin-top: 5px


