.tree-list > ul
    .line
        display none

    ul
        position: relative

        &:before
            position: absolute
            display: inline-block
            content ''
            width: 1px
            top: 0
            left: 13px
            bottom: 0
            background-color #6f7681

        .line
            display inline-block
            position: absolute
            top: 50%
            left: -24px
            width: 9px
            height: 0
            border-top 1px solid #6f7681

        li:last-child
            > .tree-list__item > .line
                height inherit
                bottom 0
                background-color #4b5461;

.tree-list
    .has-child > ul
        max-height 0
        overflow hidden
        transition .3s
    .has-child.open > ul
        max-height 1000px