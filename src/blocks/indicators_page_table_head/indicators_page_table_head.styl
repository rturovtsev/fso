/*!
* Indicators editor
*/
.indicators-editor__table
    table-layout fixed
    width: 100%

    td
        background-color #8999b1 !important
        color white
        font-family $proxyR
        font-size 16px
        text-transform uppercase
        height: 60px
        vertical-align middle

        @media (min-width: 1200px)
            font-size 18px

    .name
        width: 33%
        padding-left: 28px
        padding-right: 14px

    .value
        width: 67%
        padding-left: 14px
        padding-right: 10px

    .sp-value
        display inline-block
        margin-top: 10px

    .editor-btns
        vertical-align middle

    .btn
        height: 40px
        border 1px solid white
        border-radius 4px
        background-color transparent
        font-size 14px
        font-family $neoR
        color white
        margin-left: 8px
        vertical-align middle
        white-space nowrap
        padding-right: 24px
        padding-left: 8px;
        cursor: pointer
        width: 46px
        overflow hidden

        @media (min-width: 1200px)
            width auto
            min-width 172px
            padding-right: 30px

        &:hover
        &:focus
            color #0086cd
            background-color white

        .btn-icon
            font-size: 30px;
            margin-right: 18px;
            vertical-align: middle;

        .icon-trash
            font-size: 26px;

        .icon-edit
            font-size: 24px;

        &:first-child
            margin-left: 0

.tree_open .indicators-editor__table
    .editor-btns
        display none

        @media (min-width: 1640px)
            display block

        &+.sp-value
            margin-top: 0

            @media (min-width: 1640px)
                margin-top: 10px
