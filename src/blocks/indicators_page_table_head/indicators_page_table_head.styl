/*!
* Indicators editor
*/
.indicators-editor__table
    table-layout fixed
    width: 100%

    td
        background-color #8999b1 !important
        color white
        font-family $proxyR
        font-size 18px
        text-transform uppercase
        height: 60px
        vertical-align middle

    .name
        width: 33%
        padding-left: 28px
        padding-right: 14px

    .value
        width: 67%
        padding-left: 14px
        padding-right: 10px

    .sp-value
        display inline-block
        margin-top: 10px

    .editor-btns
        vertical-align middle

    .btn
        height: 40px
        border 1px solid white
        border-radius 4px
        background-color transparent
        font-size 16px
        font-family $neoR
        color white
        margin-left: 8px
        vertical-align middle
        white-space nowrap
        padding-right: 30px
        padding-left: 8px;
        min-width 172px
        cursor: pointer

        &:hover
        &:focus
            color #0086cd
            background-color white

        .btn-icon
            font-size: 30px;
            margin-right: 18px;
            vertical-align: middle;

        .icon-trash
            font-size: 26px;

        .icon-edit
            font-size: 24px;

        &:first-child
            margin-left: 0