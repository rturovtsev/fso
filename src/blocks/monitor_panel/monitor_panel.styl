/*!
* Monitor panel
*/
.monitor-panel
    position relative
    background-color #3c5b73
    padding 10px 0 10px 22px

@media (min-width: 941px)
    .monitor-panel
        white-space nowrap

.monitor-panel__item
    display block
    padding 0 20px
    white-space normal
    margin-bottom 10px
    &:before
        display block
        content ''
        height 1px
        background-color #1d2531
    &:first-child
        &:before
            display none
        .monitor-panel__txt
            padding-top 0

@media (min-width: 940px)
    .monitor-panel__item
        display inline-block
        vertical-align top
        width 20%
        padding 0 20px
        margin-right -4px
        white-space normal
        margin-bottom 0

@media (min-width: 940px)
    .monitor-panel__item
        &:before
            position absolute
            content ''
            height inherit
            top 40px
            bottom 40px
            width 1px
            margin-left -20px
            background-color #1d2531

.monitor-panel__txt
    padding-bottom 4px
    padding-top 10px
    a
        font-family $neoM
        font-size 13px
        color white
        text-decoration none
        &:hover
            text-decoration underline

@media (min-width: 940px)
    .monitor-panel__txt
        padding-bottom 36px
        padding-top 0

@media (min-width: 1200px)
    .monitor-panel__txt
        a
            font-size 14px

.monitor-panel__data
    line-height normal

@media (min-width: 940px)
    .monitor-panel__data
        position absolute
        bottom 6px

.monitor-panel__year
    font-family $myriad

.monitor-panel__num
    display inline-block
    vertical-align top
    margin-right 6px
    font-family $neoM
    font-size 22px
    &.red
        color #e15644
    &.green
        color #41b550
    &.yellow
        color #fbc226
    &.gray
        color #c4c4c4

@media (min-width: 1200px)
    .monitor-panel__num
        font-size 30px
        margin-right 24px

@media (min-width: 1560px)
    .monitor-panel__num
        font-size 36px
        margin-right 44px

.monitor-panel__reit
    position relative
    display inline-block
    vertical-align top
    padding 6px 8px 6px 20px
    border-radius 14px
    color white
    font-size 11px
    margin-top 0
    &.red
        background #f35337
        background linear-gradient(to bottom,  #f35337 0%,#d02d11 100%)
    &.green
        background #39d429
        background linear-gradient(to bottom,  #39d429 0%,#23a116 100%)
    &.top
        &:before
            position absolute
            top 9px
            left 8px
            content ''
            width 0
            height 0
            border-left 4px solid transparent
            border-right 4px solid transparent
            border-bottom 6px solid white
    &.down
        &:before
            position absolute
            top 9px
            left 6px
            content ''
            width 0
            height 0
            border-left 4px solid transparent
            border-right 4px solid transparent
            border-top 6px solid white

    &.state0
        background #39d429
        background linear-gradient(to bottom,  #39d429 0%,#23a116 100%)
