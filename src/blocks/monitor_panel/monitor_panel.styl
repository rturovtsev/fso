        background linear-gradient(to bottom,  #f35337 0%,#d02d11 100%)
        &:before
            position absolute
            top 9px
            left 8px
            content ''
            width 0
            height 0
            border-left 4px solid transparent
            border-right 4px solid transparent
            border-bottom 6px solid white
    &.state3
        background #f35337
        background linear-gradient(to bottom,  #f35337 0%,#d02d11 100%)
        &:before
            position absolute
            top 9px
            left 6px
            content ''
            width 0
            height 0
            border-left 4px solid transparent
            border-right 4px solid transparent
            border-top 6px solid white

@media (min-width: 1200px)
    .monitor-panel__reit
        padding 8px 10px 6px 26px
        border-radius 14px
        font-size 12px

@media (min-width: 1560px)
    .monitor-panel__reit
        font-size 16px
        margin-top 4px

