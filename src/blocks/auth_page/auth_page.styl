@import "../../css/vars"
/*!
* Auth
*/
.auth-bg
    display table-cell
    vertical-align middle
    text-align center
    width 100vw
    height 100vh
    background url(../../img/auth_bg.jpg) center center no-repeat
    background-size cover

.auth-panel
    display inline-block
    position relative
    text-align initial


.auth-panel__logo
    position absolute
    right 50%
    margin-right -75px
    top -136px
    width 149px
    height 172px
    background url(../../img/auth_logo.png) 0 0 no-repeat


.auth-panel__base
    display table
    table-layout fixed
    width 960px
    border-radius 4px
    overflow hidden


.auth-panel__intro
    display table-cell
    padding 30px 24px
    width 50%
    vertical-align middle
    border 1px solid rgb(36, 40, 53)
    background-color rgb(30, 33, 44)
    font-size 25px
    color white
    line-height 1.2


.auth-panel__form
    display table-cell
    padding 30px 70px 30px 39px
    width 50%
    vertical-align middle
    background-color white


.auth-panel__form label
    display block
    margin-bottom 10px


.auth-panel__form  .mdl-button
    position absolute
    bottom -60px


.auth-panel__label
    display inline-block
    margin-bottom 4px
    font-size 14px
    color #7f8fa4


label:focus .auth-panel__label
label:active .auth-panel__label
    color #1f5480


.auth-panel__form .fso-input
    width 100%


.auth-panel__error-txt
    display none
    font-size 12px
    color #c53509


.error .auth-panel__error-txt
    display block
