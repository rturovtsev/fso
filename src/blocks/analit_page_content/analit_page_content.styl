/*!
* Analytics page content
*/
.analyt-panel
    padding: 10px 24px

    > h1
        margin-top: 0
        margin-bottom: 42px

.analyt-navigation
    list-style none
    margin: 48px 0 0 0
    padding: 0
    text-align center
    height: 22px
    line-height: 22px

    li
        vertical-align middle
        display inline-block
        margin: 0 6px
        width: 14px
        height: 14px
        border-radius 50%
        background-color #47576f
        cursor: pointer
        transition .2s

        &.active
            width: 22px
            height: 22px
            background-color #2298f0

        &:hover
        &:focus
            background-color #2298f0