/*!
* Analytics name panel
*/
.analyt-name__wrap
    position: relative
    height: 60px
    padding-left: 66px
    padding-right: 66px

    .lnk
        position: absolute
        display inline-block
        top: 0
        width: 66px
        height: 60px
        text-align center
        color white
        background-color #4b5461
        font-size: 20px;
        line-height: 60px;
        text-decoration none
        outline none
        transition .2s

        &:hover
        &:focus
            background-color: #6a717b;

    .name-panel__left
        left: 0

    .name-panel__right
        right: 0

.analyt-name
    position: relative
    height: 60px
    background-color #8999b1
    color #d9d8d8
    font-family $myriad
    font-size 18px
    line-height: 60px
    text-align center
    -webkit-user-select: none
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none

    .analyt-name__input
        display none
        position: absolute
        top: 0
        left: 0
        width: 100%
        height: 100%
        border 0
        background-color #8999b1
        color white
        font-family $myriad
        font-size 18px
        outline none
        text-align center