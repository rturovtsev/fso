extends ./templates/layout.jade

block vars
    - var current = 1;
    - var indicator_tabs = 5;

block stylesheet
    link(rel='stylesheet', href='common/css/select.css')
    link(rel='stylesheet', href='common/css/scroll.css')
    link(rel='stylesheet', href='common/css/main.css')
    link(rel='stylesheet', href='common/css/header_logo/header_logo.css')
    link(rel='stylesheet', href='common/css/header_site_name/header_site_name.css')
    link(rel='stylesheet', href='common/css/header_user/header_user.css')
    link(rel='stylesheet', href='common/css/sidebar/sidebar.css')
    link(rel='stylesheet', href='common/css/indicators_page_content/indicators_page_content.css')
    link(rel='stylesheet', href='common/css/indicators_page_tree/indicators_page_tree.css')
    link(rel='stylesheet', href='common/css/indicators_page_tabs/indicators_page_tabs.css')
    link(rel='stylesheet', href='common/css/indicators_page_table_head/indicators_page_table_head.css')
    link(rel='stylesheet', href='common/css/tree_cont/tree_cont.css')

block content
    .content
        #indicators-tree__right.indicators-tree__right
            include ./blocks/indicators_page_tree/indicators_page_tree

            h1
                | Количество и проявлений межэтнической и межконфессиональной напряженности на территории Российской Федерации

            include ./blocks/indicators_page_tabs/indicators_page_tabs

            .indicators-content__scrolled-cont

                .indicators-editor
                    include ./blocks/indicators_page_table_head/indicators_page_table_head


                .indicators-charts
                    .indicators-charts__item.red
                        .indicators-chart__top
                            .chart__top_name
                                | Отношение населения к деятельности президента РФ
                            .chart__top_btns
                                button(type="button").btn
                                    span.icon-trash
                                button(type="button").btn
                                    span.icon-dgr
                                button(type="button").btn
                                    span.icon-full
                        .indicators-chart__content

                    .indicators-charts__item.green
                        .indicators-chart__top
                            .chart__top_name
                                | Динамика изменения отношения населения к деятельности президента рф
                            .chart__top_btns
                                button(type="button").btn
                                    span.icon-trash
                                button(type="button").btn
                                    span.icon-dgr
                                button(type="button").btn
                                    span.icon-full
                        .indicators-chart__content

                    .indicators-charts__item.blue
                        .indicators-chart__top
                            .chart__top_name
                                | Динамика изменения отношения населения к деятельности президента рф
                            .chart__top_btns
                                button(type="button").btn
                                    span.icon-trash
                                button(type="button").btn
                                    span.icon-dgr
                                button(type="button").btn
                                    span.icon-full
                        .indicators-chart__content